  FoamFile
  {
      version     2.0;
      format      ascii;
      class       volScalarField;
      object      k;
  }
  // * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

  dimensions      [0 2 -2 0 0 0 0];  // m^2/s^2

  internalField   uniform 0.0375;

  boundaryField
  {
      inlet
      {
          type            fixedValue;
          value           uniform 0.0375;
      }

      outlet
      {
          type            zeroGradient;
      }

      walls
      {
          type            kqRWallFunction;
          value           uniform 0.0375;
      }
  }

